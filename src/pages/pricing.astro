---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Pricing Plans for IT Off-Topics"
    subtitle="Explore our pricing plans designed to fit different needs."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our plans for IT Off-Topics"
    subtitle="Most features are free for all students"
    prices={[
      {
        title: 'basic',
        subtitle: 'Students needing essential features.',
        price: 29,
        period: 'per month',
        items: [
          {
            description: 'Access to Learning Materials',
          },
          {
            description: 'Student Profiles',
          },
          {
            description: 'Community Forums',
          },
          {
            description: 'Get help and access FAQs.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: 'https://pay.google.com?phone=7465814952"',
        },
      },
      {
        title: 'standard',
        subtitle: 'Students wanting more resources.',
        price: 7,
        period: 'Per Month',
        items: [
          {
            description: 'Priority support with faster response times.',
          },
          {
            description: 'Early access to new features via email.',
          },
          {
            description: 'Enhanced notes with detailed explanations.',
          },
          {
            description: 'Access to updated syllabus information about your branch and semester.',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'premium',
        subtitle: 'Students seeking a personalized experience.',
        price: 199,
        period: 'Per Month',
        items: [
          {
            description: 'Enhanced visibility with a blue tick and additional recognition within the community.',
          },
          {
            description: 'Access detailed insights and analytics for your contribution',
          },
          {
            description: 'Customize your profile with additional options and features.',
          },
          {
            description: 'Suspendisse auctor blandit dui',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related notice"
    subtitle="Why pricing is important and why offering free access can be beneficial."
    columns={2}
    items={[
      {
        title: 'Balancing Accessibility and Sustainability',
        description:
          'Offering free access ensures that all students can benefit from essential resources without financial constraints.',
        icon: 'tabler:arrow-bar-to-right',
      },
      {
        title: 'Encouraging Widespread Use',
        description: 'Providing core features for free encourages widespread adoption and use of the platform',
        icon: 'tabler:arrow-bar-to-right',
      },
      {
        title: 'Supporting Development and Maintenance',
        description:
          'While basic features are free, pricing for advanced features supports the ongoing development and maintenance of the platform.',
        icon: 'tabler:arrow-bar-to-right',
      },
      {
        title: ' Enabling Premium Features',
        description: `Pricing allows us to offer premium features and advanced tools that enhance the user experience.`,
        icon: 'tabler:arrow-bar-to-right',
      },
      {
        title: 'Ensuring Quality and Innovation',
        description:
          'A mix of free and priced plans ensures that everyone can access the essential tools while funding innovation and new features. ',
        icon: 'tabler:arrow-bar-to-right',
      },
      {
        title: 'Creating Fair and Flexible Options',
        description:
          'Free access to fundamental features provides equitable opportunities for all users, while pricing for additional features offers flexibility and choice based on individual needs and budgets.',
        icon: 'tabler:arrow-bar-to-right',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Understand Off-Topics Goals',
        icon: 'tabler:number-1',
      },
      {
        title: 'Choose Your Contribution Plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Prepare Your Contribution',
        icon: 'tabler:number-3',
      },
      {
        title: 'Submit Your Changes',
        icon: 'tabler:number-4',
      },
      {
        title: 'Receive Feedback',
        icon: 'tabler:number-5',
      },
      {
        title: 'Implement Suggestions',
        icon: 'tabler:number-6',
      },
      {
        title: 'Celebrate Your Impact',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://cdn.pixabay.com/photo/2014/08/08/07/30/success-413093_960_720.jpg',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: ' Are all features of Off-Topics free?',
        description:
          'Yes, most features are available for free to all students. However, some advanced features may require a subscription.',
      },
      {
        title: 'What do I get with the Basic plan?',
        description: 'The Basic plan offers access to essential features, including basic resources and support.',
      },
      {
        title: 'What additional benefits does the Standard plan provide?',
        description:
          'The Standard plan includes more resources, enhanced support, and additional tools to help with your studies.',
      },
      {
        title: 'What is included in the Premium plan?',
        description:
          'The Premium plan offers the most comprehensive features, including priority support, exclusive resources, and advanced tools.',
      },
      {
        title: 'Why do we have a pricing structure if many features are free?',
        description:
          'The pricing helps support ongoing development and improvements, ensuring that we can continue offering and enhancing our services.',
      },
    ]}
  />
</Layout>
