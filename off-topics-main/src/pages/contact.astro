---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="For quicker answers, explore our FAQs section. You might find the solution you're looking for there! If not, we are more than happy to assist you."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By filling out this contact form, you agree to the collection and handling of your personal information in accordance with our privacy policy.',
    }}
    description="We typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Technical Assistance',
        description: `Guidance on resolving issues related to IT off-topics, including troubleshooting, setup, and configuration problems. This may involve solving errors, understanding technical jargon, or configuring software and hardware.`,
      },
      {
        title: 'Educational Support',
        description:
          'Help with understanding IT off-topics through explanations, tutorials, and resources. This includes providing clear, simplified explanations of complex concepts, offering educational materials, and recommending additional learning resources.',
      },
      {
        title: 'Administrative Help',
        description:
          'Assistance with form submissions, data management, and compliance related to IT off-topics. This includes help with filling out forms, understanding data requirements, and ensuring proper documentation and record-keeping.',
      },
      {
        title: 'Phone',
        description: '+91 7465 824952',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@offtopics.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '244715, Nainital, UK, India',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
